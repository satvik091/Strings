1- #include <stdio.h>

int main()
{
    char a[100]={'H','A','R','R','Y'};
    int i, b=0;
    for(i=0;a[i];i++){
        b++;
    }
    
    a[i]=0;
    printf("%d",b);

    return 0;
}

2- 
#include <stdio.h>

int main()
{
    char a[100]={'H','A','R','R','Y'};
    char b[100];
    
    int i;
    for(i=0;a[i];i++){
        b[i]=a[i];
    }
    b[i]=0;
    printf("%s",b);
    return 0;
}

